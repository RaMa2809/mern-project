extends ../layout/guest

block body-classes
  body.login-page
    .login-box
      .login-logo
        a(href='../../index2.html')
          b Admin
          | Panel
      .card
        .card-body.login-card-body
          p.login-box-msg Sign in to start your session
          form(action='' method='post')
            .input-group.mb-3
              input.form-control(type='email' placeholder='Email')
              .input-group-append
                .input-group-text
                  span.fas.fa-envelope
            .input-group.mb-3
              input.form-control(type='password' placeholder='Password')
              .input-group-append
                .input-group-text
                  span.fas.fa-lock
            .row
              .col-8
                .icheck-primary
                  input#remember(type='checkbox')
                  label(for='remember')
                    | Remember Me
              .col-4
                button.btn.btn-primary.btn-block#loginSubmitButton(type='submit') Sign In
          //.social-auth-links.text-center.mb-3
          //  //p - OR -
          //  //a.btn.btn-block.btn-primary(href='#')
          //  //  i.fab.fa-facebook.mr-2
          //  //  |  Sign in using Facebook
          //  //a.btn.btn-block.btn-danger(href='#')
          //  //  i.fab.fa-google-plus.mr-2
          //  //  |  Sign in using Google+
          p.mb-1
            a(href='/forgot-password') I forgot my password
          p.mb-0
            a.text-center(href='/register') Register a new membership
